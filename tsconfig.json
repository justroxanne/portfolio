{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2022"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
